{
  "manifest_version": 3,
  "name": "Claude Memory Bridge",
  "version": "1.0",
  "description": "Connects Claude conversations to persistent memory",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "https://claude.ai/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}